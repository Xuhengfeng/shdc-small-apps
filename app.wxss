/**app.wxss**/
@import "/weui.wxss";
view,text{
  line-height: 1;
}
.house-info{
    margin-left: 25rpx;
}

::-webkit-scrollbar
{
    width: 0;
    height: 0;
    color: transparent;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page{
    background-color: #F8F8F8;
    height: 100%;
    width: 100%;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif,Microsoft Yahei;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

/*按钮主调色*/
.globalBtnColor{
  background-color: #ff4343!important;
}
button[type=warn]{
  background-color: #ff4343!important;
}
/** 修改默认的navigator点击态 **/  
.navigator-hover {  
    color: none;  
}  
/* component/navBar/navBar.wxss */
@import "../../iconfont.wxss";
/*房源列表*/
.page_list{
    width: 100%!important;
}
.item{
    display: flex;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #eee;
    cursor: pointer;
}
.item .image{
    float: left;
    margin-right: 40rpx;
    margin-left: 25rpx;
    min-width: 260rpx;
    width: 260rpx;
    height: 210rpx;
    background: #f2f2f2;
}
.item .image image{
  width: 100%;
  height: 100%;
}
.tips{
    font-size: 28rpx;
    text-align: center;
    padding: 50rpx;
    color: #ccc;
}
.tips image{
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}
.tips image,
.tips text{
    vertical-align: middle;
}



/*导航菜单*/
.labelgroup{
  position: relative;
  width: 100%;
}
.labelgroup .navbar{
  background: #ffffff;
  height: 70rpx; 
  line-height: 70rpx;
  flex-flow: row nowrap;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  position: relative;
  z-index: 10;
}
.labelgroup .navbar view{
  flex: 1;
  font-size: 28rpx;
  height: 100%;
  color: #333333;
}
.labelgroup .navbar image{
  width: 14rpx;
  height: 9rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}
.labelgroup .content{
  position: absolute;
  left: 0;
  background: #ffffff;
  width: 100%;
}
.paddingbox{
  height: 160rpx;
}

/* content 公共部分 */
.area,
.housetype,
.price,
.area2,
.type{
  border-top:1rpx solid #cacaca;
}
.housetype .housetype-hd,
.price .price-hd,
.area2 .area2-hd,
.type .type-hd{
  margin: 30rpx 0 0 24rpx;
  overflow: hidden;
}
.housetype .housetype-hd text,
.price .price-hd text,
.area2 .area2-hd text,
.type .type-hd text{
  display: inline-block;
  font-size: 26rpx;
  color: #333333;
  background: #f9f9f9;
  border-radius: 10rpx;
  margin: 0 10rpx 20rpx 0;
  width: 166rpx;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  text-align: center;
}

/*区域*/
.area{
  display: flex;
  flex-direction: row;
  flex-flow: nowrap;
  justify-content: flex-start;
  height: 500rpx;
  max-height: 500rpx;
  background: #ffffff;
}
.area .one,
.area .two{
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  text-indent: 0rpx;
  padding-left: 35rpx;
}
.area .two{
  border-left: 1rpx solid #cacaca;
  background: #f9f9f9;
}
.area .one view,
.area .two view{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  border-bottom:1rpx solid #cacaca;
  color: #333333;
}



/*户型*/
.housetype .housetype-ft{
  display: flex;
  flex-flow: row nowrap;
  text-align: center;
  justify-content: space-between;
  padding: 30rpx 0;
  width: 100%;
  overflow: hidden;
}
.housetype .housetype-ft button{
  flex:280rpx 0 0;
  line-height: 80rpx;
  width: 280rpx;
}



/*价格*/
.price .price-bd{
  margin: 20rpx 24rpx 30rpx;
  overflow: hidden;
}
.price .price-bd .title{
 margin-bottom:30rpx;
 font-size: 32rpx;
 color: #333333;
 font-weight: bold;
}
.price .price-bd .line{
  margin-left: 20rpx;
  width: 20rpx;
  height: 1px;
  background: #999999;
  float: left;
  margin-top: 20rpx;
}
.price .price-bd  input{
  border: 1rpx solid #999999;
  width: 300rpx;
  float: left;
  border-radius: 10rpx;
  text-align: center;
  margin-left: 20rpx;
  font-size: 26rpx;
}
.price .price-ft{
  display: flex;
  flex-flow: row nowrap;
  text-align: center;
  justify-content: space-between;
  padding: 30rpx 0;
  width: 100%;
  border-top: 1rpx solid #cacaca;
}
.price .price-ft button{
  flex:280rpx 0 0;
  line-height: 80rpx;
  width: 280rpx;
}



/*面积*/
.area2 .area2-ft{
  display: flex;
  flex-flow: row nowrap;
  text-align: center;
  justify-content: space-between;
  padding: 30rpx 0;
  width: 100%;
}
.area2 .area2-ft button{
  flex:280rpx 0 0;
  line-height: 80rpx;
  width: 280rpx;
}




/*类型*/
.type .type-ft{
  display: flex;
  flex-flow: row nowrap;
  text-align: center;
  justify-content: space-between;
  padding: 30rpx 0;
  width: 100%;
}
.type .type-ft button{
  flex:280rpx 0 0;
  line-height: 80rpx;
  width: 280rpx;
}


/*弹出层modal*/
.shadowLay{
  overflow: hidden;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: rgba(0,0,0,.2);
} 
.shadowLay .dialog{
  width: 600rpx;
  height: auto;
  background: #ffffff;
  border-radius: 10rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  box-sizing: border-box;
}
.dialog-header{
  padding: 60rpx 30rpx 0;
}
.dialog .avtor{
  float: left;
  width: 160rpx;
  height: 160rpx;
  background: #cacaca;
  margin-right: 30rpx;
  border-radius: 15rpx;
  overflow: hidden;
}
.dialog .avtor image{
  width: 100%;
  height: 100%;
}
.dialog .discription{
  overflow: hidden;
}
.dialog .discription .name{
  font-size: 40rpx;
  color: #000000;
  line-height: 1;
}
.dialog .dialog-body view{
  width: 50%;
  display: inline-block;
  text-align: center;
  padding: 40rpx 0;
  letter-spacing: 5rpx;
  font-size: 36rpx;
  color: #333333;
  line-height: 1;
}

/* 遮罩层 */
.shadowModal{
  position: fixed;
  top: 0px;
  right: 0px;
  bottom: 0px;
  left: 0px;
  background: rgba(0,0,0,.5);
}

/* button 样式 */
.globalBtnColor{
  background-color: #ff4343!important;
  height: 80rpx;
  line-height: 80rpx;
  width: 280rpx;
}
button::after{
  border:0;
}
/* 样式 */
.font1Color{
  color: #ff4343!important;
}
.font2Color{
  color: #000000;
}
.font3Color{
  color: #ff4343!important;
  background: #ffeeee!important;
}

<view class="section6" wx:if="{{detailType!==33}}">
  <view class="title"><text>附近房源</text></view>
  <block wx:for="{{[1,1,1,1]}}">
    <navigator url="">
        <view class="item">
            <view class="image">
              <image src="{{item.housePic?item.housePic:'../../images/astate.png'}}"></image>
            </view>
            <view>
              <!-- 二手房(买房)、租房详情 -->

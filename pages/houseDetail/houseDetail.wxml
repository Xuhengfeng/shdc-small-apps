<view class="section5" wx:if="{{detailType!==33}}">
  <view class="title"><text>关联小区</text></view>
  <block wx:for="{{guanlianList}}">
    <navigator url="">
        <view class="item">
            <view class="image">
              <image src="{{item.housePic?item.housePic:'../../images/astate.png'}}"></image>
            </view>
            <view>
              <!-- 二手房(买房)详情 -->
              <template is="houseContent1" data="{{item}}" wx:if="{{detailType}}"/>

<import src="../template/template.wxml"/>

<view class="header">
  <swiper bindchange="listenSwiper" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image bindtap="previewIamge" src="{{item}}" data-src="{{item}}" class="slide-image" height="150" style="width:100%!important;background-size:cover" />
      </swiper-item>
    </block>
  </swiper>
  <view class="indicator">
    <text>{{currentIndex}}/{{imagelength}}</text>
  </view>
</view>

<view class="section1">

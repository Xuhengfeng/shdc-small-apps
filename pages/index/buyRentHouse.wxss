@import "../template/template.wxss";
::-webkit-scrollbar{
  display: none;
}
navigator{
  overflow: hidden;
}
.header{
  height: 400rpx;
}
.header swiper{
  height: 100%;
}
.header .indicator{
  position: absolute;
  left: 50%;
  bottom: 14rpx;
  transform: translateX(-50%);
}
.header .indicator view{
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  border-radius: 100%;
  margin-right: 15rpx;
}

.serarch-content{
  position: fixed;
  top: 0;
  left: 80rpx;
  z-index: 1000;
  box-sizing: border-box;
}
.serarch-content .search-bg{
  border-radius: 15rpx;
  width: 580rpx;
  height: 70rpx;
  line-height: 70rpx;
  box-shadow: 0 0 10rpx rgba(0,0,0,.1); 
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}
.serarch-content .search{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  width: 100%;
}
.serarch-content .searchImg image{
  width: 25rpx;
  height: 25rpx;
  margin: 10rpx 10rpx 0 30rpx;
}
.serarch-content .search input{
  font-size: 26rpx;
  flex: 1;
}

/* 固定头部的nav */
.mynav{
  position: fixed;
  left: 0;
  width: 100%;
  z-index: 1000;
  background: #f9f9f9;
}

/*导航菜单*/
.labelgroup{
  position: relative;
  width: 100%;
}
.labelgroup .navbar{
  background: #ffffff;
  height: 70rpx; 
  line-height: 70rpx;
  flex-flow: row nowrap;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  position: relative;
  z-index: 10;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  background: #f9f9f9;
}
.labelgroup .navbar view{
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}
.labelgroup .navbar image{
  width: 14rpx;
  height: 9rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}

.recommend>view:nth-of-type(2){
  height: 240rpx;
}
.recommend .goods-item{
  width: 380rpx;
  height: 100%;
  margin-right: 20rpx;
  display: inline-block;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
}
.recommend .goods-item image{
  width: 100%;
  height: 100%;
}
.recommend .goods-item .content{
  position: absolute;
  top: 0;
  left: 0;
  width: 380rpx;
  height: 240rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.item .item-title{
  font-size:30rpx;
  line-height: 1.2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.houseTag text:nth-of-type(1){
  background: #5ee4a7;
}
.houseTag text:nth-of-type(2){
  background: #ffcc9a;
}
.houseTag text:nth-of-type(3){
  background: #fface5;
}
.back{
  position: absolute;
  top:  9rpx;
  left: -30rpx;
  z-index: 1100;
}
.back image{
  width: 30rpx;
  height: 45rpx;
}
<import src="../template/template.wxml"/>
  <view class="header">
    <swiper indicator-dots="true" 
            autoplay="true" 
            interval="3000"
            indicator-active-color="white" 
            circular="true"
            catchtap="onSwiperTap" 
            duration="1000">
      <block wx:for="{{imgUrls}}" wx:key="key">
        <swiper-item>
          <image src="{{item.picUrl}}" 
                class="slide-image" 
                style="width:100%;height:100%;"
                data-jump="{{item.contentUrl}}">
          </image>
        </swiper-item>
      </block>
    </swiper>
 
    <view class="serarch-content">
      <navigator url="../location/location" hover-class="none">
        <text class="location">{{myLocation}}</text>
        <image src="../../images/drop.png" />
      </navigator>
      <navigator url="../search/search" hover-class="none" style="flex:1">
        <view style="height:80rpx;">
          <view class="search">
            <image src="../../images/search.png" />
            <text>搜索心意住所</text>
          </view>
        </view>
      </navigator>
    </view>
  </view>

  <view class="section menu">
    <view class="flex-row">
      <navigator url="../index/buyRentHouse?houseType=二手房" class="flex-view-item" hover-class="none"> 
        <image src="../../images/buyHouse.png" />
        <text>二手房</text>
      </navigator>
      <navigator url="../index/buyRentHouse?houseType=租房" class="flex-view-item" hover-class="none">
        <image src="../../images/rentHouse.png" />
        <text>租房</text>
      </navigator>
      <navigator url="../searchList/searchList?houseType=小区找房" class="flex-view-item" hover-class="none">
        <image src="../../images/fondHouse.png" />
        <text>小区找房</text>
      </navigator>
      <navigator url="sellRent" class="flex-view-item" hover-class="none">
        <image src="../../images/saleHouse.png" />
         <text>我要售/租</text>
      </navigator>
      <navigator url="shop" class="flex-view-item" hover-class="none">
        <image src="../../images/store.png" />
         <text>找门店</text>
      </navigator>
    </view>
    <image src="../../images/shadow.png" style="width:100%;height:20rpx;"></image>
  </view>
  

  <!-- fourPic start -->
  <view class="section fourPic">
    <navigator url="../searchList/searchList?houseType=小区找房"  hover-class="none">
        <view class="image"><image src="../../images/fondHouse.png" /></view>
        <view class="content">
          <text>独家好房</text>
          <text>价格优惠</text>
        </view>
    </navigator>
    <navigator url="../searchList/searchList?houseType=小区找房"  hover-class="none">
        <view class="image"><image src="../../images/fondHouse.png" /></view>
        <view class="content">
            <text>新上好房</text>
            <text>一周内新上房</text>
        </view>
    </navigator>
    <navigator url="../searchList/searchList?houseType=小区找房"  hover-class="none">
        <view class="image"><image src="../../images/fondHouse.png" /></view>
        <view style="line-height:1">
          <view class="content">
            <text>品质租房</text>
            <text>拎包入住</text>
          </view>
        </view>
    </navigator>
    <navigator url="../searchList/searchList?houseType=小区找房"  hover-class="none">
        <view class="image"><image src="../../images/fondHouse.png" /></view>
        <view style="line-height:1">
          <view class="content">
            <text>热门好房</text>
            <text>热关注度房源</text>
         </view>
        </view>
    </navigator>
  </view>
  <!-- fourPic end -->

  <view class="section hot">
    <view class="title">热门推荐</view>
    <view class="house-info">
            <scroll-view scroll-x="true" style="white-space:nowrap;display:flex;">
              <block wx:for="{{hotbuilding}}">
                <navigator url="../houseDetail/houseDetail?houseDetail=热门小区&id={{item.sdid}}"  
                      class="house-info-item" hover-class="none">
                  <view style="background:#f9f9f9;width:100%;height:248rpx;">
                     <image src="{{item.housePic?item.housePic: '../../images/astate.png'}}" /> 
                  </view>
                  <view style="margin-top:20rpx;font-size:32rpx;line-height:1;font-weight:normal">世华易居买房大放送</view>
                  <view style="margin-top:20rpx;">
                    <text style="font-size:26rpx;color:#666666;line-height:1">即日起世华买房送大礼</text>
                  </view>
                </navigator>
              </block>
            </scroll-view>
    </view>
  </view>

  <view class="section section3">
    <view class="title">平台二手房成交量统计</view>
    <view class="section3-content">
      <image src="../../images/shihua.png" style="width:100%;height:240rpx;" />
      <view class="section3-content-one">
        <view style="color:#cacaca;">全市{{houseUsed.month}}月均价</view>
        <view style="color:#ffffff;margin-top:40rpx;">{{houseUsed.avgPrice}}<text style="font-size:24rpx">元/平米</text>
        </view>
      </view>
      <view class="section3-content-two">
        <view style="color:#cacaca;">{{houseUsed.month}}月世华成交量</view>
        <view style="color:#ffffff;margin-top:40rpx;">{{houseUsed.suiteCount}}
          <text>套</text>
        </view>
      </view>
    </view>
  </view>

  <view class="section4">
    <view class="title">热门小区
        <navigator url="hotHouse?title=热门小区" hover-class="none" class="lookmore">查看更多</navigator>
    </view>
    <view class="house-info">
      <scroll-view scroll-x="true" style="white-space:nowrap;display:flex;">
        <block wx:for="{{hotbuilding}}">
          <navigator url="../houseDetail/houseDetail?houseDetail=热门小区&id={{item.sdid}}"  class="house-info-item" hover-class="none">
            <view style="background:#f9f9f9;width:100%;height:248rpx;">
              <image src="{{item.housePic?item.housePic: '../../images/astate.png'}}" />
            </view>
            <view style="margin-top:20rpx;font-size:36rpx;line-height:1">{{item.buildName}}</view>
            <view style="margin-top:20rpx;font-size:26rpx;color:#666666;line-height:1">
              <text>在售{{item.saleCount}}套/在租{{item.rentCount}}套</text>
            </view>
            <view style="margin-top:20rpx;font-size:38rpx;color:#ff4343;line-height:1">
              <text>{{item.avgSalePrice}}</text>
              <text style="font-size:22rpx;">元/平米</text>
            </view>
          </navigator>
        </block>
      </scroll-view>
    </view>
  </view>

  <view>
     <view class="title">新盘推荐
        <navigator url="hotHouse?title=热门小区" hover-class="none" class="lookmore">查看更多</navigator>
    </view>
    <view class="house-info">
      <scroll-view scroll-x="true" style="white-space:nowrap;display:flex;">
        <block wx:for="{{hotbuilding}}">
          <navigator url="../houseDetail/houseDetail?houseDetail=热门小区&id={{item.sdid}}"  class="house-info-item" hover-class="none">
            <view style="background:#f9f9f9;width:100%;height:248rpx;">
              <image src="{{item.housePic?item.housePic: '../../images/astate.png'}}" />
            </view>
            <view style="margin-top:20rpx;font-size:36rpx;line-height:1">{{item.buildName}}</view>
            <view style="margin-top:20rpx;font-size:26rpx;color:#666666;line-height:1">
              <text>在售{{item.saleCount}}套/在租{{item.rentCount}}套</text>
            </view>
          </navigator>
        </block>
      </scroll-view>
    </view>
  </view>

  <view class="section section5">
      <view class="title">猜你喜欢
        <view class="lookmore">
            <text style="font-weight:normal;font-size:30rpx;" 
                  wx:for="{{guessYouLike}}" 
                  wx:key="key" 
                  data-index="{{index}}" 
                  bindtap="selectYouLike" 
                  class="{{index == num?'red':'gray'}}">{{item}}</text>
        </view>
     </view>
        <block wx:for="{{houseList}}" wx:key="index" wx:for-item="item">
            <navigator url="../houseDetail/houseDetail?id={{item.sdid}}&houseDetail={{guessYouLike[num]}}" 
                       hover-class="none">
                <view class="item">
                      <view class="image">
                        <image src="{{item.housePic?item.housePic: '../../images/astate.png'}}"></image></view>
                      <view class="item-content">
                        <view class="item-title">{{item.houseTitle}}</view>
                        <view style="font-size:26rpx;color:#666666;margin-top:20rpx;line-height:1;">
                          <text>{{item.areaName}} {{item.districtName}} {{item.houseDirection}}</text>
                        </view>
                        <view style="font-size:26rpx;color:#666666;margin-top:10rpx;line-height:1;">
                          <text style="margin-right:20rpx">{{item.houseType}}</text>
                          <text>{{item.builtArea}}m²</text>
                        </view>

                        <view class="houseTag" style="font-size:26rpx;color:#666666;margin-top:10rpx;white-space:nowrap">
                          <text wx:for="{{item.houseTag}}" 
                                wx:key="{{index2}}"
                                wx:for-item="item2" 
                                wx:for-index="index2" 
                                style="margin-right:20rpx;padding:5rpx 10rpx;color:#fff;">{{item2}}</text>
                        </view>

                      <view wx:if="{{flagPrice}}" style="font-size:34rpx;color:#ff4343;margin-top:20rpx;line-height:1;">{{item.saleTotal}}万
                          <text style="font-size:24rpx;color:#666666;margin-left:25rpx;">{{item.salePrice}}元/平米</text>
                      </view>
                      <view wx:if="{{!flagPrice}}" style="font-size:34rpx;color:#ff4343;margin-top:20rpx;line-height:1;">{{item.rentPrice}}
                          <text style="font-size:24rpx;color:#666666;margin-left:10rpx">元/月</text>
                      </view>
                    </view>
                </view>
            </navigator>
        </block>


        <view class="tips">
            <view wx:if="{{hasMore}}"><image src="../../images/loading.gif" mode="aspectFill"/><text>玩了命的加载中...</text></view>
            <view wx:elif="{{twohandhouse.length==0}}"><text>没有更多内容</text></view>
            <navigator wx:elif="{{twohandhouse.length!=0}}" 
                        url="../searchList/searchList?houseType={{houseType[num]}}"
                        hover-class="none">查看全部房源</navigator>
        </view> 
        <loading wx:if="{{showload}}">加载中...</loading>
    </view>





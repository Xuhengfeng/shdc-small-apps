@import "../template/template.wxss";
page{
  background-color: #f9f9f9;
  height: 100%;
}
.header{
  position: relative;
  height: 400rpx;
}
.header swiper{
  height: 100%;
}
.header .indicator{
  position: absolute;
  left: 50%;
  bottom: 14rpx;
  transform: translateX(-50%);
}
.header .indicator view{
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  border-radius: 100%;
  margin-right: 15rpx;
}
.serarch-content{
  background: rgba(255,255,255,.9);
  border-radius: 15rpx;
  position: absolute;
  top: 20rpx;
  left: 50%;
  width: 660rpx;
  height: 80rpx;
  line-height: 80rpx;
  transform: translateX(-50%);
  box-shadow: 0 0 10rpx rgba(0,0,0,.1); 
  display: flex;
  flex-direction: row;
  flex-flow: nowrap;
  justify-content: flex-start;
  align-items: center;
}
.serarch-content .location{
  float: left;
  font-size: 30rpx;
  margin-left: 20rpx;
  vertical-align: top; 
}
.serarch-content .location+image{
  float: left;
  margin: 30rpx 25rpx 0;
  width: 25rpx;
  height: 25rpx; 
}
.serarch-content .search{
  float: left;  
  border-left:1px solid #666;
  height: 40rpx;
  margin-top: 20rpx;
}
.serarch-content .search image{
  float: left;
  width: 25rpx;
  height: 25rpx;
  margin: 10rpx 10rpx 0 30rpx;
}
.serarch-content .search text{
  float: left;
  font-size: 28rpx;
  height: 27rpx;
  line-height: 42rpx;
  color: #999999; 
}
.section1{
  background: #fff;
  box-shadow: 0 0 1rpx rgba(0,0,0,.4);
}
.section1 .flex-row{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  text-align: center;
}
.section1 .flex-view-item{
  padding: 40rpx 0;
  flex: 1;
}
.section1 .flex-view-item image{
  width: 80rpx;
  height: 80rpx;
}
.section1 .flex-view-item text{
  font-size: 28rpx;
}
.section2{
  margin-top: 10rpx; 
}
.section2 .buyer-guide{
  position: relative;
  overflow: hidden;
  padding: 0 24rpx;
  background: #fff;
}
.section2 .buyer-guide navigator{
  position: absolute;
  right: 24rpx;
  top: 58rpx;
}

.goods-info{
  background: #fff;
}
.goods-info .goods-item{
  display: inline-block;
  background: #F2f2f2; 
  width: 500rpx; 
  height: 200rpx; 
  margin-right: 20rpx;
  padding: 10rpx;
  box-sizing: border-box;
  overflow: hidden;
  background: #f9f9f9;
}
.goods-info .goods-item image{
   float:left;
   margin-right: 20rpx;
   width: 200rpx;
   height: 178rpx;
   overflow: hidden
}
.goods-info .goods-item text{
  display: block;
  line-height: 1.4;
  white-space: pre-wrap; 
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden; 
  font-size: 32rpx;  
}
.goods-info .goods-item text:nth-of-type(2){
  margin-top: 30rpx;
  font-size: 24rpx;  
  color: #666666;
}
.section3{
  overflow: hidden;
  background: #fff;
  font-size: 40rpx;
  font-weight: bold;
  font-family: 'Microsoft Yahei';
}
.section3 .section3-content{
  position: relative;
  padding: 0 25rpx;
  height: 240rpx;
}
.section3 .trading-volume{
  overflow: hidden;
  padding: 0 24rpx;
}
.section3 .trading-volume>text{
  float: left;
  margin: 60rpx 0 40rpx;
  font-size: 40rpx;
  font-weight: bold;
  font-family: 'Microsoft Yahei';
}
.section3 .section3-content .section3-content-one{
  position: absolute;
  top: 65rpx;
  left: 65rpx;
}
.section3 .section3-content .section3-content-two{
  position: absolute;
  top: 65rpx;
  left: 425rpx;
}
.section4{
  overflow: hidden;
  background: #fff;
}
.section4 .hot-estate{
  position: relative;
  overflow: hidden;
  padding: 0 24rpx;
  background:#fff;
}
.section4 .hot-estate navigator{
  position: absolute;
  top: 60rpx;
  right: 25rpx;
}
.section4 .house-info-item{
  width: 320rpx;
  margin-left: 20rpx;
  display: inline-block;
}
.section4 .house-info-item image{
  width: 100%;
  height: 100%;
}
.section5{
  background: #ffffff;
}
.section5 .guess-like{
  position: relative;
  padding-left: 24rpx;
  overflow: hidden;
}
.section5 .guess-like .twoselect{
  position: absolute;
  right: 0;
  top: 60rpx;
}
/*轮播图指示器*/
.gray{
  background: rgba(0,0,0,.4);
}
.white{
  background: #ffffff;
}
.red{
  color: #ff4343;
}
.section5 .item-content{
  padding-right: 25px;
  overflow: hidden;
}
.section5 .item-title{
  font-size:30rpx;
  line-height: 1.2;
  text-align: justify;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
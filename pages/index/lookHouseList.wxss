page{
  width: 100%;
  overflow: hidden;
  box-sizing:border-box
}
.item{
  position: relative;
  height: 210rpx;
}
.item:after{
  content: "";
  position: absolute;
  bottom: 0;
  left: 25rpx;
  width: calc(100% - 25rpx);
  height: 1px;
  background: #e5e5e5;
}
.content{
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  background:  #fff;
  padding: 20rpx 0;
  align-items: center;
  flex-flow: row nowrap;
  box-sizing: border-box;
  transition: all 0.2s ease;
}
.content>view:nth-of-type(1){
  width: 102rpx;
}
.content>view:nth-of-type(1) image{
  display: block;
  margin: 0 auto;
  width: 30rpx;
  height: 30rpx;
}
.content>view:nth-of-type(2) image{
  width: 180rpx;
  height: 150rpx;
  margin-right: 30rpx;
  background: red;
}
.content>view:nth-of-type(3){
  flex: 1;
  height: 100%;
  background: yellow;
}
.item .cancel{
  position: absolute;
  top: 0;
  right: 0;
  height: 210rpx;
  line-height: 210rpx;
  width: 219rpx;
  text-align: center;
  background: red;
  color: #ffffff;
}
.move{
  transform: translate3d(-220rpx,0,0);  
}
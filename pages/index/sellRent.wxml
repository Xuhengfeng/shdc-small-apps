<view class="header">
  <image src="{{banner[0].picUrl}}"/>
</view>

<view  class="selectItem">
    <view bindtap="selectOne">我要出售  
              <image wx:if="{{selectFlag1}}" src="../../images/select-on.png"/>
              <image wx:if="{{!selectFlag1}}" src="../../images/select-off.png"/> </view>
    <view bindtap="selectTwo">我要出租  
                <image wx:if="{{selectFlag2}}" src="../../images/select-on.png"/>
                <image wx:if="{{!selectFlag2}}" src="../../images/select-off.png"/></view>
</view>

<view class="section2">
  <view class="weui-cells weui-cells_after-title">

    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label">姓名</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input" 
                        placeholder-class="phcolor"  
                        placeholder="请输入您的姓名"
                        bindinput="bindKeyInput1"/>
        </view>
    </view>

    <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
            <view class="weui-label">电话</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input" 
                        type="number" 
                        maxlength="11" 
                        placeholder-class="phcolor"  
                        placeholder="请输入您的手机号" 
                        bindinput="bindKeyInput2"/>
        </view>
    </view>

    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">城市</view>
      </view>
      <view class="weui-cell__bd">
            <input class="weui-input {{phcolorFlag? 'phcolor': ''}}" 
                    style="text-align:left;" 
                    disabled = "{{true}}"
                    value="{{city}}"
                    bindtap="jumpCityList" />
      </view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </view>

    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label">小区</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input {{phcolorFlag3? 'phcolor': ''}}"  
                    disabled = "{{true}}"
                    value="{{houseRimName}}"
                    bindtap="houseRim" />
        </view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </view>

    <view class="weui-cell weui-cell_input own">
        <view class="weui-cell__hd">
            <view class="weui-label" style="white-space:nowrap">栋座/单元/门牌号</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input {{phcolorFlag4? 'phcolor': ''}}"  
                    disabled = "{{true}}"
                    value="{{houseInfoContent}}"
                    bindtap="houseInfo"/>
        </view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </view>

    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label" style="white-space:nowrap">具体地址</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input {{phcolorFlag5? 'phcolor': ''}}"
                    disabled = "{{true}}"
                    value="{{address}}"/>
        </view>
    </view>
 
  </view>
</view>


<view class="section">
<view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
        <view class="weui-label">选经纪人</view>
    </view>
    <view class="weui-cell__bd">
        <view class="weui-input {{phcolorFlag2? 'phcolor': ''}}" 
                    style="text-align:left;" 
                    bindtap="jumpBrokerList">{{broker}}</view>
    </view>
    <view class="weui-cell__ft  weui-cell__ft_in-access"></view>
</view>
</view>


<view class="section3">我们将在最短的时间内与您联系</view>
<view class="section4">
  <button class="weui-btn" type="warn" bindtap="commit">提交</button>
</view>


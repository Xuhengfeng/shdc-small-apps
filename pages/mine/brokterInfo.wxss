@import "../template/template.wxss";
.list{
  background: #ffffff;
  overflow: hidden;
  padding-top: 40rpx;
  position: relative;
  border-top: 1px solid #e6e6e6;
}

.list .avatar{
  float: left;
  width: 150rpx;
  height: 150rpx;
  background: red;
  border-radius: 50%;
  margin: 20rpx 40rpx 40rpx 20rpx;
}
.list .content{
  overflow: hidden;
}
.content{
  padding: 20rpx 20rpx 20rpx 0;
}
.content view:first-child{
  overflow: hidden;
}
.content .name{
  font-size: 36rpx;
  color: #333333;
  float: left;
}
.content .name text{ 
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #999999;
}
.content  .score{
  float: right;
  font-size: 36rpx;
  color:  #ff4343;
}
.content  .score text{
  font-size: 26rpx;
  color: #999999;
}
.content .location{
  margin-top: 20rpx;
  color: #666666;
  font-size: 30rpx;
}
.content .num{
   margin-top: 20rpx;
  display: inline-block;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}
.content .num text{
  margin-left: 20rpx;
}
.content .like{
  position: absolute;
  right: 64rpx;
  bottom: 70rpx;
  width: 45rpx;
  height: 42rpx;
  background: red;
}

.flex-content{
  display: flex;
  flex-flow: row nowrap;
  border-top: 1px solid #e6e6e6;
  border-bottom: 1px solid #e6e6e6;
  text-align: center;
  justify-content: center;
  padding: 40rpx 0;
  background: #ffffff;
}
.flex-item{
  flex: 1;
}
.flex-item view:nth-of-type(1){
  font-size: 40rpx;
  color: #000;
  margin-bottom: 30rpx;
}
.flex-item view:nth-of-type(2){
  font-size: 28rpx;
  color: #666666;
}
.appraise{
  background: #ffffff;
  padding: 60rpx 24rpx 0;
}
.appraise>view:nth-of-type(1){
  padding-bottom:  10rpx;
}
.appraise>view:not(:nth-of-type(1)){
  padding: 30rpx 0;
  border-bottom: 1px solid #e6e6e6;
}
.appraise view:not(:nth-of-type(1)) .image{
  width: 68rpx;
  height: 68rpx;
  margin-right: 20rpx;
  background: red;
  border-radius: 50%;
  float: left;
}
.appraise view:not(:nth-of-type(1)) .image image{
  width: 100%;
  height: 100%;
}
.appraise view:not(:nth-of-type(1)) .r-content{
  overflow: hidden;
}
.r-content .name{
    font-size: 30rpx;    
    margin-bottom: 26rpx;
}
.r-content .star{
  display: inline-block;
  margin: 0 14rpx 20rpx 0;
}
.name text{
  float: right;
}
.star image{
  width: 29rpx;
  height: 26rpx;
  background: red;
}
.discription .text{
  padding: 20rpx;
  background: #f9f9f9;
}
.footer{
  height: 120rpx;
  padding: 20rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  background: #ffffff;
  box-shadow: 0 0 1rpx 4rpx rgba(0,0,0,.2);
}
.footer view{
  width: 100%;
  height: 100%;
  line-height: 80rpx;
  text-align: center;
  background: red;
  border-radius: 10rpx;
  color: #ffffff;
  font-size: 30rpx;
}
.weui-cell{
  padding:0;
}

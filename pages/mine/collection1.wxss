@import "../template/template.wxss";
navigator{
  overflow: hidden;
}
.headerTab{
  padding-top: 40px!important;
}
.page_hd .flexBox{
  display: flex;
  flex-direction: row;
  flex-flow: nowrap;
  justify-content: center;
  align-items: center;
  text-align: center;
  line-height: 100rpx;
}
.flexBox .line{
  flex: 1;
  height: 1px;
  background: #c7c7c7;
}
.flexBox text{
  flex: 1;
  font-size: 30rpx;
  color: #c7c7c7;
}
button{
  margin-top: 40rpx;
  border-radius: 0;
  font-size: 40rpx;
  color: #ffffff;
  text-align: center;
}
.page_hd{
  padding: 40rpx;
  height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.navbar{
  position: fixed;
  top: 0;
  background: #ffffff;
}
/* 房源失效样式 */
.item{
  position: relative;
  margin: 0 0 20rpx 0;
  background: #ffffff;
  padding: 30rpx 24rpx;
  transition: all 0.3s;
}
.originHouse,
.lose{
  position: absolute;
  top: 0;
  left: 0;
  height: 34rpx;
  line-height: 34rpx;
  padding: 0 16rpx;
  background: #00b969;
  color: #ffffff;
  font-size: 20rpx;
  border-top-right-radius: 17rpx;
  border-bottom-right-radius: 17rpx;
}
.lose{
  background: #666666;
}
.shadow{
  position: absolute;
  width: 240rpx;
  height: 200rpx;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.2);
}
.changecolor{
  color: #666666!important;
  text-decoration:line-through;
}
/* 空页面 */
.nodata{
  position: fixed;
  width: 186rpx;
  height: 136rpx;
  text-align: center;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
}
.nodataContent{
  position: fixed;
  text-align: center;
  top: 50%;
  left: 50%;
  transform: translateX(-50%);
  color: #666666;
}

.bodyItem{
  position: relative;
}
/* 删除 */
.cancel{
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  line-height: 320rpx;
  width: 219rpx;
  text-align: center;
  background: red;
  color: #ffffff;
}
.move{
  transform: translate3d(-220rpx,0,0);  
}

page{
    background: #ffffff;
}
.main{
    padding: 40rpx 24rpx;
}
.commentItem{
    overflow: hidden;
    border-bottom: 1px solid #e6e6e6;
}
.commentItem-hd{
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
    margin-bottom: 40rpx;
}
.commentItem-hd image{
    flex: 90rpx 0 0;
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin-right: 30rpx;
}
.commentItem-hd view{
    flex: 1;
    font-size: 30rpx;
    color: #222222;
}
.commentItem-hd view text{
    float: right;
    font-size: 24rpx;
    color: #999999;
}
.content{
    word-break: break-all;
    line-height: 1.2;
    font-size: 28rpx;
    color: #666666;
    margin-bottom: 30rpx;
}
.tags{
    margin-bottom: 20rpx;
    line-height: 2;
    font-size: 20rpx;
}
.tags text{
    padding: 10rpx;
    margin: 0 10rpx 10rpx 0;
    border: 1px solid #cacaca;
}
.brokerInfo{
    width: 100%;
    height: 90rpx;
    background: #f2f2f2;
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
    margin-bottom: 40rpx;
}
.brokerInfo image{
    width: 60rpx;
    height: 60rpx; 
    border-radius: 50%;
    background:#ff0000;
    margin: 0 30rpx;
}
.brokerInfo image+view{
    font-size:20rpx;
    color: #999999;
}
.brokerName{
    font-size: 26rpx;
    color: #222222;
    margin-right: 20rpx;
}

/* 提示 */
.tips{
    font-size: 28rpx;
    text-align: center;
    padding: 50rpx;
    color: #ccc;
}
.tips image{
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}
.tips image,
.tips text{
    vertical-align: middle;
}

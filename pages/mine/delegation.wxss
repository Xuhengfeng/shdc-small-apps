/* pages/mine/delegation.wxss */
.main{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  width: 100%;
  height: 235rpx;
}
.main view{
  flex: 1;
}
.main image{
  width: 54rpx;
  height: 56rpx;
  background: red;
}
.main image+view{
  font-size: 30rpx;
  color: #ff4343;
  margin-top: 30rpx;
}

.section{
  background: #ffffff;
}
.section .title{
  font-size: 38rpx;
  color: #333333;
  height: 118rpx;
  line-height: 118rpx;
  border-bottom: 1rpx solid #999999; 
  padding: 0 20rpx;
}
.section .title view{
  float: right;
  font-size: 26rpx;
  color: #999999;
  height: 118rpx;
  line-height: 118rpx;
}
.section .description>view:first-child{
  margin: 20rpx;
  color: #333333;
  font-size: 36rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #999999; 
}
.section .description>view:last-child{
  margin: 20rpx;
  color: #999999;
  font-size: 26rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.section .description>view image{
  width: 26rpx;
  height: 14rpx;
  background: red;
}

.userInfo{
  background: #ffffff;
  margin-top: 20rpx;
  overflow: hidden;
}
.userInfo>view:first-child{
  padding-left: 20rpx;
  font-size: 38rpx;
  color: #333333;
  height: 118rpx;
  line-height: 118rpx;
  border-bottom: 1rpx solid #999999; 
}
.userInfo>view:last-child image{
  float: left;
  width: 150rpx;
  height: 150rpx;
  background: red;
  margin: 20rpx 40rpx 20rpx 20rpx;
}
.userInfo>view:last-child .content{
  overflow: hidden;
}
.content{
  padding: 20rpx 20rpx 20rpx 0;
}
.content view:first-child{
  overflow: hidden;
}
.content .name{
  font-size: 36rpx;
  color: #333333;
  float: left;
}
.content .name text{ 
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #999999;
}
.content  .score{
  float: right;
  font-size: 36rpx;
  color:  #ff4343;
}
.content  .score text{
  font-size: 26rpx;
  color: #999999;
}
.content .location{
  margin-top: 20rpx;
  color: #666666;
  font-size: 30rpx;
}
.content .tag{
  margin-top: 20rpx;
}
.content .tag text{
  display: inline-block;
  background: #f9f9f9;
  width: 130rpx;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}
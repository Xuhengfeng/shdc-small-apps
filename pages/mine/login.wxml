<view class="page">
  <view class="page_hd" wx:if="{{true}}">
    <view class="flexBox">
      <view class="line"></view> 
      <text>推荐方式登录</text>
      <view class="line"></view> 
    </view>
     <button type="primary" 
        
        bindtap="getUseInfo"  
        class="globalBtnColor iconfont icon-weixin2"> 账号登录</button> 
  </view>
  <!-- open-type="getPhoneNumber" 
        bindgetphonenumber="getPhoneNumber" -->
  
  
  <view class="page__bd" wx:if="{{false}}">
      <view class="section">
        <view bindtap="back" class="iconfont icon-iconset0127" style="font-size:60rpx;"></view>
        <text style="margin-top:40rpx;font-size:60rpx;">手机快捷登录</text>
      </view>
      <view class="section">
        <input placeholder="请输入手机号" bindinput="bindKeyInput1" style="float:left;width:70%"/>
        <text class="sendBtn" bindtap="sendCode">获取验证码</text>
      </view>
      <view class="section">
        <input placeholder="请输入验证码"  bindinput="bindKeyInput2" />
      </view>
      <button bindtap="login" type="primary" class="globalBtnColor">登录</button>   
  </view>
</view>